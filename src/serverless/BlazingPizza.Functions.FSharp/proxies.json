{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    "GetOrders": {
      "matchCondition": {
        "methods": ["GET"],
        "route": "/api/orders"
      },

      "backendUri": "http://localhost/api/get-orders"
    },
    "GetOrderById": {
      "matchCondition": {
        "methods": ["GET"],
        "route": "/api/orders/{orderId}"
      },

      "backendUri": "http://localhost/api/order-by-id/{orderId}"
    },
    "PlaceOrder": {
      "matchCondition": {
        "methods": ["POST"],
        "route": "/api/orders"
      },

      "backendUri": "http://localhost/api/place-orders"
    }
  }
}
